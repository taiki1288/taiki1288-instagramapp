= image_tag 'top.png', class: 'top-img'
.container
  %h2.label-title Forgot your password?
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :email, class: 'label-title'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'label-area'
    .actions
      = f.submit "reset password", class: 'btn-primary'
  -# = render "devise/shared/links"
